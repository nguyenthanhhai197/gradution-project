
@{
    ViewData["Title"] = "GetCources";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
@using eLearning.Core.Entities;
@using eLearning.Common;
@model Pagination<Course>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <h4>Courses</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Teacher</th>
                                <th>Created At</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int order = 1;
                            }
                            @foreach (var course in Model.PageData)
                            {
                                <tr>
                                    <td scope="row">@order</td>
                                    <td><strong>@course.Name</strong></td>
                                    @if (course.Group == EnumCourseGroup.Grammar)
                                    {


                                        <td><span class="badge badge-primary">Grammar</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-success">Tutorial</span></td>
                                    }
                                    <td>@course.Teacher.Name</td>
                                    <td><strong>@course.CreatedAt.ToFormat()</strong></td>
                                    <td>
                                        <a href="/Course/DeleteCourse?id=@course.Id"><strong><span class="ti-trash text-danger"></span></strong></a>
                                        <a href="/Course/GetCource?id=@course.Id"><strong><span class="ti-pencil text-success"></span></strong></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>