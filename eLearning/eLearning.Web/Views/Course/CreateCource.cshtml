@using eLearning.Core.Entities
@model IEnumerable<Teacher>

@{
    ViewData["Title"] = "CreateCource";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <h4>Create Course</h4>

            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form asp-action="CreateCource" asp-controller="Course" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <h4 class="text-muted m-b-15 f-s-12">Name</h4>
                            <input type="text" class="form-control input-flat " placeholder="Enter course name" name="Name">
                        </div>
                        <div class="form-group">
                            <h4 class="text-muted m-b-15 f-s-12">Order</h4>
                            <input type="number" class="form-control input-flat" placeholder="Order" name="Order">
                        </div>
                        <div class="form-group">
                            <h4 class="text-muted m-b-15 f-s-12">Description</h4>
                            <textarea name="Description"></textarea>
                            <script>
                                CKEDITOR.replace('Description');
                            </script>
                        </div>
                        <div class="form-group">
                            <h4 class="text-muted m-b-15 f-s-12">Image</h4>
                            <input type="file" class="form-control input-flat" placeholder="Input Rounded" name="File">
                        </div>
                        <div class="form-group">
                            <h4 class="text-muted m-b-15 f-s-12">Type</h4>
                            <select class="form-control" name="Group">
                                <option value="1">Grammar</option>
                                <option value="2">Tutorial</option>
                            </select>
                        </div>
                        @await Html.PartialAsync("~/Pages/Shared/_ChildTeachers.cshtml", Model)
                        
                        <button type="submit" class="btn btn-primary btn-flat">Create Course</button>
                        <button class="btn btn-danger btn-flat">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
