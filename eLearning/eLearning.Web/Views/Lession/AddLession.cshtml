
@{
    ViewData["Title"] = "AddLession";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@using eLearning.Core.Entities
@model Course
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <h4>Create Lession in Course</h4>
            </div>
            <div class="card-body">
                <div class="basic-elements">
                    <form asp-action="AddLession" asp-controller="Lession" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Course</label>
                                    <input class="form-control" type="text" value="@Model.Name" readonly="">
                                    <input class="form-control" type="text" value="@Model.Id" hidden name="CourseId">
                                </div>
                                <div class="form-group">
                                    <label>Lession name</label>
                                    <input type="text" class="form-control" name="Name">
                                </div>
                                <div class="form-group">
                                    <label>Video url</label>
                                    <input class="form-control" type="text" name="VideoUrl">
                                </div>
                                <div class="form-group">
                                    <label>Lession Content</label>
                                    <textarea name="Content"></textarea>
                                    <script>
                                        CKEDITOR.replace('Content');
                                    </script>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-success btn-flat" type="submit">Create Lession</button>
                        <button class="btn btn-danger btn-flat">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>